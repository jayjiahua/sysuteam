extend layout

block append head
  link(href="/dist/css/bootstrap-datetimepicker.css", rel="stylesheet")
  link(href="/dist/css/sysuteam/sponsor_activity_create.css", rel="stylesheet")
  script(type="text/javascript", charset="utf-8", src="/ueditor/ueditor.config.js")
  script(type="text/javascript", charset="utf-8", src="/ueditor/ueditor.all.min.js")

block title
  title 中大TEAM-创建活动
 
block content
  #mycontainer
    #user_img
      img.img-circle.user_portrait(alt="140x140", data-src="/holder.js/140x140", src="", data-holder-rendered="true")
    h3(style="text-align:center;") 发布新的活动
    .sac_title_time
      //<!--活动名称-->
      div.input-group.col-sm-8.col-md-8#composeworktitle
        span.input-group-addon#basic-addon1 标题
        input#title.form-control(name="name" type="text", placeholder="Title", aria-describedby="basic-addon1")
      //<!--活动时间-->
      div.input-group.col-sm-3.col-md-3#composeworktime
        span.input-group-addon时间
        input.form-control#datetimepicker(name="end-time" type="text" value="2012-05-15 21:05"  size='5')

    // 活动内容
    #composeworkcontent
      script#editor(type="text/plain", style="width:100%;height:500px;")
    br
    p(style="text-align:center;")
      a.btn.btn-primary(role="button", href="#") 发布



  block extrajs
    script(type="text/javascript", src="/dist/js/bootstrap-datetimepicker.js", charset="UTF-8")
    script(type="text/javascript") $('#datetimepicker').datetimepicker();
    script(type="text/javascript") var ue = UE.getEditor('editor');