mixin activities
  .row.activities
    each activity in activities 
      .col-sm-6.col-md-4
        .thumbnail
          img(data-src="holder.js/100%x200", src='', alt='activity name')
          .caption
            h6 #{activity.name}
            span 队长： #{activity.username}
            br
            span 时间： #{activity.create_time}
            p.activity_bts
              a.btn.btn-primary(role="button", href="/team/#{activity.team_id}") 详情
              a.btn.btn-danger(role="button", href="#") 喜欢

