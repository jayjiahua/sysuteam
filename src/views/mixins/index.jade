mixin carousel_index
  #index-slide.carousel.slide(data-ride='carousel')
    ol.carousel-indicators
      li.active(data-target='#index-slide', data-slide-to='0')
      li(data-target='#index-slide', data-slide-to='1')
      li(data-target='#index-slide', data-slide-to='2')
    .carousel-inner(role='list-box')
      .item.active
        img(src='/img/slide0.jpg', alt='voice')
        .carousel-caption
          .slide-info
            h3 维纳斯歌手大赛
            p 不看一场维纳斯枉为中大人
      .item
        img(src='/img/slide1.jpg', alt='a')
        .carousel-caption
          .slide-info
            h3 中大院系篮球赛
            p 篮球赛！有妹子！
      .item
        img(src='/img/slide2.jpg', alt='b')
        .carousel-caption
          .slide-info
            h3 文艺写作大赛
            p 第一名奖励吴嘉华一个
    a.left.carousel-control(href='#index-slide', role='button', data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only previous
    a.right.carousel-control(href='#index-slide', role='button', data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only next

